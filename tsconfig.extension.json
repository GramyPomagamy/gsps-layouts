{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDirs": ["src/extension", "src/schemas"],
    "outDir": "extension",
    "target": "ES2016",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/extension/**/*.ts", "src/schemas/**/*.ts", "src/types/**/*.d.ts"]
}
