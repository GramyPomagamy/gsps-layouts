{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "donationSocketUrl": {
            "type": "string"
        },
        "tracker": {
            "type": ["object", "null"],
            "properties": {
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "description": "Login information for the private areas of the tracker API.",
            "required": ["username", "password"],
            "default": null
        },
        "nowPlayingFile": {
            "type": "string"
        },
        "obs": {
            "type": ["object"],
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": true
                },
                "address": {
                    "type": "string",
                    "default": "localhost:4444"
                },
                "password": {
                    "type": "string",
                    "default": ""
                }
            },
            "description": "Info needed to use OBS websockets.",
            "required": ["enabled", "address", "password"]
        },
        "foobar": {
            "type": ["object"],
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": true
                },
                "address": {
                    "type": "string",
                    "default": "localhost:8880"
                },
                "username": {
                    "type": "string",
                    "default": ""
                },
                "password": {
                    "type": "string",
                    "default": ""
                }
            },
            "description": "Info needed to control foobar2000.",
            "required": ["enabled", "address", "username", "password"]
        }
    },
    "required": ["nowPlayingFile", "obs", "foobar", "tracker"]
}
