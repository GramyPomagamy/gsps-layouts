{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "google": {
      "type": ["object"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "spreadsheetId": {
          "type": "string"
        },
        "service_email": {
          "type": "string"
        },
        "private_key": {
          "type": "string"
        }
      },
      "required": ["enabled", "spreadsheetId", "service_email", "private_key"]
    },
    "obs": {
      "type": ["object"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "address": {
          "type": "string",
          "default": "localhost:4444"
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "scenes": {
          "type": "object",
          "properties": {
            "intermission": {
              "type": "string",
              "default": "Przerwa [M]"
            },
            "video": {
              "type": "string",
              "default": "Przerwa - film"
            },
            "demotywatory": {
              "type": "string",
              "default": "Åšmieszne demotywatory 4:3"
            }
          },
          "required": ["intermission", "video", "demotywatory"]
        }
      },
      "description": "Info needed to use OBS websockets.",
      "required": ["enabled", "address", "password", "scenes"]
    },
    "foobar": {
      "type": ["object"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "address": {
          "type": "string",
          "default": "http://localhost:8880"
        },
        "unmuteKeyword": {
          "type": "string",
          "default": "[M]"
        }
      },
      "description": "Info needed to control foobar2000.",
      "required": ["enabled", "address", "unmuteKeyword"]
    },
    "footpedal": {
      "type": ["object"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        }
      },
      "required": ["enabled"]
    },
    "twitchExt": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "token": {
          "type": "string"
        }
      },
      "required": ["enabled", "token"]
    }
  },
  "required": [
    "obs",
    "foobar",
    "google",
    "footpedal",
    "twitchExt"
  ]
}
