{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "obs": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "address": {
          "type": "string",
          "default": "ws://localhost:4444"
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "stingerActionDelay": {
          "type": "number",
          "default": 1250
        },
        "scenes": {
          "type": "object",
          "properties": {
            "intermission": {
              "type": "string",
              "default": "Przerwa [M]"
            },
            "video": {
              "type": "string",
              "default": "Przerwa - film"
            },
            "hosterka": {
              "type": "string",
              "default": "Hosterka"
            },
            "countdown": {
              "type": "string",
              "default": "Odliczanie [M]"
            }
          },
          "required": ["intermission", "video", "hosterka", "countdown"]
        },
        "sources": {
          "type": "object",
          "properties": {
            "intermissionVideo": {
              "type": "string",
              "default": "Film na przerwie - źródło"
            }
          },
          "required": ["intermissionVideo"]
        },
        "croppers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "default": ""
              },
              "name": {
                "type": "string",
                "default": ""
              },
              "sceneName": {
                "type": "string",
                "default": ""
              },
              "sourceName": {
                "type": "string",
                "default": ""
              }
            },
            "additionalProperties": false,
            "required": ["url", "name", "sceneName", "sourceName"]
          }
        }
      },
      "description": "Info needed to use OBS websockets.",
      "required": ["enabled"]
    },
    "foobar": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "address": {
          "type": "string",
          "default": "http://localhost:8880"
        },
        "musicKeyword": {
          "type": "string",
          "default": "[M]"
        }
      },
      "description": "Info needed to control foobar2000.",
      "required": ["enabled"]
    },
    "streams": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "accounts": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        }
      }
    }
  },
  "required": ["obs", "foobar"]
}
