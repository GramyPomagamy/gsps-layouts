{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "donationSocket": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "url": {
          "type": "string",
          "default": ""
        }
      },
      "required": ["enabled"]
    },
    "milestones": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "url": {
          "type": "string",
          "default": ""
        }
      },
      "required": ["enabled"]
    },
    "tracker": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "username": {
          "type": "string",
          "default": ""
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "eventID": {
          "type": "number",
          "default": 18
        },
        "rootURL": {
          "type": "string",
          "default": "https://gsps.pl/donacje"
        }
      },
      "description": "Login information for the private areas of the tracker API.",
      "required": ["enabled", "rootURL"]
    },
    "highlighter": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "spreadsheetId": {
          "type": "string",
          "default": ""
        },
        "service_email": {
          "type": "string",
          "default": ""
        },
        "private_key": {
          "type": "string",
          "default": ""
        },
        "remote": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "url": {
              "type": "string",
              "default": ""
            }
          },
          "required": ["enabled"]
        }
      },
      "required": ["enabled"]
    },
    "obs": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "address": {
          "type": "string",
          "default": "localhost:4444"
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "stingerActionDelay": {
          "type": "number",
          "default": 1250
        },
        "scenes": {
          "type": "object",
          "properties": {
            "intermission": {
              "type": "string",
              "default": "Przerwa [M]"
            },
            "video": {
              "type": "string",
              "default": "Przerwa - film"
            },
            "hosterka": {
              "type": "string",
              "default": "Hosterka"
            },
            "countdown": {
              "type": "string",
              "default": "Odliczanie [M]"
            }
          },
          "required": ["intermission", "video", "hosterka", "countdown"]
        },
        "sources": {
          "type": "object",
          "properties": {
            "intermissionVideo": {
              "type": "string",
              "default": "Film na przerwie - źródło"
            },
            "hostAudio": {
              "type": "string",
              "default": "mixer-host-input"
            }
          },
          "required": ["intermissionVideo", "hostAudio"]
        },
        "croppers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "default": ""
              },
              "name": {
                "type": "string",
                "default": ""
              },
              "sceneName": {
                "type": "string",
                "default": ""
              },
              "sourceName": {
                "type": "string",
                "default": ""
              }
            },
            "additionalProperties": false,
            "required": ["url", "name", "sceneName", "sourceName"]
          }
        },
        "timestamps": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            }
          },
          "required": ["enabled"]
        }
      },
      "description": "Info needed to use OBS websockets.",
      "required": ["enabled"]
    },
    "foobar": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "address": {
          "type": "string",
          "default": "http://localhost:8880"
        },
        "musicKeyword": {
          "type": "string",
          "default": "[M]"
        }
      },
      "description": "Info needed to control foobar2000.",
      "required": ["enabled"]
    },
    "footpedal": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        }
      },
      "required": ["enabled"]
    },
    "genericReplicant": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        }
      },
      "required": ["enabled"]
    },
    "twitchExt": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "token": {
          "type": "string",
          "default": ""
        }
      },
      "required": ["enabled"]
    },
    "sd": {
      "type": "object",
      "description": "Stream Deck related settings",
      "properties": {
        "enabled": {
          "description": "Enable the Stream Deck HTTP endpoints",
          "type": "boolean",
          "default": false
        }
      },
      "required": ["enabled"]
    },
    "autoUpdateGameAfterImport": {
      "type": "boolean",
      "description": "Update game twitch name and player pronouns after Oengus import is complete.",
      "default": false
    }
  },
  "required": [
    "obs",
    "foobar",
    "tracker",
    "highlighter",
    "footpedal",
    "milestones",
    "donationSocket",
    "twitchExt",
    "sd",
    "genericReplicant"
  ]
}
