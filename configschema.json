{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "donationSocketUrl": {
      "type": "string"
    },
    "tracker": {
      "type": ["object", "null"],
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "description": "Login information for the private areas of the tracker API.",
      "required": ["username", "password"],
      "default": null
    },
    "google": {
      "type": ["object"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "spreadsheetId": {
          "type": "string"
        },
        "service_email": {
          "type": "string"
        },
        "private_key": {
          "type": "string"
        }
      },
      "required": ["enabled", "spreadsheetId", "service_email", "private_key"]
    },
    "obs": {
      "type": ["object"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "address": {
          "type": "string",
          "default": "localhost:4444"
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "scenes": {
          "type": "object",
          "properties": {
            "intermission": {
              "type": "string",
              "default": "Przerwa [M]"
            }
          },
          "required": ["intermission"]
        }
      },
      "description": "Info needed to use OBS websockets.",
      "required": ["enabled", "address", "password", "scenes"]
    },
    "foobar": {
      "type": ["object"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "address": {
          "type": "string",
          "default": "http://localhost:8880"
        }
      },
      "description": "Info needed to control foobar2000.",
      "required": ["enabled", "address"]
    }
  },
  "required": ["obs", "foobar", "tracker", "google"]
}
