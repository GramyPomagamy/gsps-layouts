{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "donationSocket": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "url": {
          "type": "string",
          "default": ""
        }
      },
      "required": ["enabled"]
    },
    "milestones": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "url": {
          "type": "string",
          "default": ""
        }
      },
      "required": ["enabled"]
    },
    "tracker": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "username": {
          "type": "string",
          "default": ""
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "eventID": {
          "type": "number",
          "default": 18
        },
        "rootURL": {
          "type": "string",
          "default": "https://gsps.pl/donacje"
        }
      },
      "description": "Login information for the private areas of the tracker API.",
      "required": ["enabled", "rootURL"]
    },
    "google": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "spreadsheetId": {
          "type": "string",
          "default": ""
        },
        "service_email": {
          "type": "string",
          "default": ""
        },
        "private_key": {
          "type": "string",
          "default": ""
        }
      },
      "required": ["enabled"]
    },
    "obs": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "address": {
          "type": "string",
          "default": "localhost:4444"
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "scenes": {
          "type": "object",
          "properties": {
            "intermission": {
              "type": "string",
              "default": "Przerwa [M]"
            },
            "video": {
              "type": "string",
              "default": "Przerwa - film"
            },
            "hosterka": {
              "type": "string",
              "default": "Hosterka"
            }
          },
          "required": ["intermission", "video", "hosterka"]
        },
        "croppers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "default": ""
              },
              "name": {
                "type": "string",
                "default": ""
              },
              "sceneName": {
                "type": "string",
                "default": ""
              },
              "sourceName": {
                "type": "string",
                "default": ""
              }
            },
            "additionalProperties": false,
            "required": ["url", "name", "sceneName", "sourceName"]
          }
        },
        "timestamps": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "csv_folder_path": {
              "type": "string",
              "description": "The path to save CSV files with VoD timestamps."
            }
          },
          "required": ["enabled"]
        }
      },
      "description": "Info needed to use OBS websockets.",
      "required": ["enabled"]
    },
    "foobar": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "address": {
          "type": "string",
          "default": "http://localhost:8880"
        },
        "unmuteKeyword": {
          "type": "string",
          "default": "[M]"
        }
      },
      "description": "Info needed to control foobar2000.",
      "required": ["enabled"]
    },
    "footpedal": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        }
      },
      "required": ["enabled"]
    },
    "twitchExt": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "token": {
          "type": "string",
          "default": ""
        }
      },
      "required": ["enabled"]
    }
  },
  "required": [
    "obs",
    "foobar",
    "tracker",
    "google",
    "footpedal",
    "milestones",
    "donationSocket",
    "twitchExt"
  ]
}
